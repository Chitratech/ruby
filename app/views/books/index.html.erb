<h1>Listing books</h1>

<table>
  <tr>
    <th>Acc no</th>
    <th>Title</th>
    <th>Authors</th>
    <th>Edition</th>
    <th>Publisher</th>
  </tr>

<% for book in @books %>
  <tr>
    <td><%=h book.acc_no %></td>
    <td><%=h book.title %></td>
    <td><%=h book.authors %></td>
    <td><%=h book.edition %></td>
    <td><%=h book.publisher %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

